import java.util.Scanner;

public class circle {

	public static void main(String[] args) {
      Scanner scanner = new Scanner(System.in);
		  System.out.println( "indicate the circumference in centimeters." );
      double r = scanner.nextDouble();
      System.out.println("Tne circumference is " + ( 2 * 3.14159 * r ) + " cm.");
	    }

}
